<div class="panel panel-right">
  <table class="table">
    <thead>
      <tr>
        <th>Uscite</th>
      </tr>
    </thead>

    <tbody>
      <% @outings.each do |outing| %>
         <tr>
			<td><%= outing.day %><br />
              <%= outing.location %><br />
              <%= outing.time %>
			  <% if current_user.role == 'admin' %>
			  <hr>
			  <%= link_to 'Modifica', edit_outing_path(outing) %><%= link_to 'Elimina', outing, method: :delete, data: { confirm: 'Sei sicuro?' } %>
			  </td>
			
		  <% end %>
		</tr>
      <% end %>
    </tbody>
  </table>
  <span><center><%= will_paginate @outings, previous_label: 'Precedente', next_label: 'Successivo' %></center></span>
</div>